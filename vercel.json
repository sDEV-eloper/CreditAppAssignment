{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js", 
      "use": "@vercel/node"
    },
    {
      "src": "client/index.html",  
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",  
      "dest": "/server/server.js"
    },
    {
      "src": "/(.*)",     
      "dest": "/client/$1"
    }
  ]
}
